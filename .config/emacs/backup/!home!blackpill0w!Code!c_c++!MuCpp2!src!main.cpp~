#include <iostream>

#include <wx/wx.h>
#include <wx/bmpbuttn.h>

class MainFrame : public wxFrame {
 public:
  MainFrame(const wxString &title) : wxFrame(nullptr, wxID_ANY, title) {}
};

class App : public wxApp {
 public:
  bool OnInit() {
    MainFrame *mframe = new MainFrame("Super Duper App");
    wxPanel *panel    = new wxPanel(mframe);
    wxBoxSizer *box   = new wxBoxSizer(wxHORIZONTAL);
    box->SetContainingWindow(panel);

    auto *bb = new wxBitmap();
    bb->LoadFile("../img.jpg");

    auto *bbbndl = new wxBitmapBundle();
    bbbndl->FromBitmap(*bb);

    auto *button = new wxBitmapButton(panel, wxID_ANY, *bbbndl);
    box->Add(button);

    mframe->Show();
    return true;
  }
};

wxIMPLEMENT_APP(App);
